<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Login">

    <ImageView
        android:id="@+id/login_desgin"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/login_design"/>


    <EditText
        android:id="@+id/_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/no_border_circle"
        android:elevation="1dp"
        android:hint="Enter your email-ID"
        android:layout_below="@+id/login_desgin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"/>
    <EditText
        android:id="@+id/_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/no_border_circle"
        android:elevation="1dp"
        android:inputType="textPassword"
        android:hint="Password (8 Characters ) "
        android:layout_below="@+id/_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        android:textColor="#000"
        android:fontFamily="@font/roboto"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/_password"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:fontFamily="@font/roboto_bold"
        android:textSize="15sp"
        android:textColor="#fff"
        android:background="@drawable/login_btn_shape"
        android:layout_below="@id/forgot_password"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/connect_using_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or connect using"
        android:textColor="#b3b3b3"
        android:layout_below="@id/login_btn"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"/>

    <LinearLayout
        android:id="@+id/connect_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connect_using_text"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/facebook_login"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:background="@drawable/fb_btn"
            android:layout_below="@id/forgot_password"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/google_login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Google"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@drawable/google_btn"
            android:layout_below="@id/forgot_password"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connect_layout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="#494a4c"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/user_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SignUp"
            android:textSize="18sp"
            android:textColor="#2a65a7"
            android:fontFamily="@font/roboto"/>
    </LinearLayout>



</RelativeLayout>
</ScrollView>