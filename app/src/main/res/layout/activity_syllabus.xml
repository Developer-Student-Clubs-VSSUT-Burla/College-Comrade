            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:src="@drawable/s2"
            />

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#F8BBD0"
            app:src="@drawable/s3"/>
