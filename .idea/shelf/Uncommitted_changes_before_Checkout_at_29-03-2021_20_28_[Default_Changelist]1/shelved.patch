+    public static TodoDatabase getDatabase(final Context context) {
+        if (INSTANCE == null) {
+            synchronized (TodoDatabase.class) {
+                if (INSTANCE == null) {
+                    INSTANCE = Room.databaseBuilder(context.getApplicationContext(),
+                            TodoDatabase.class, "word_database")
+                            .build();
+                }
+            }
+        }
+        return INSTANCE;
+    }
